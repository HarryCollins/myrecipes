
<div class="center jumbotron">
  <h1>Welcome to MyRecipes App</h1>

  <h2>Collate edit and store all of your recipes in one place</h2>

  <%= link_to "Sign up now", register_path, class: "btn btn-lg btn-success" %>

</div>
  
<div class="row">
  <div class="col-lg-4">
    <h3 class="midrow">
      Browse as guest user
    </h3>
    <p class="text-center"><%= link_to "Browse recipe listings", recipes_path, class: "btn btn-warning btn-small" %></p>
  </div>

  <div class="col-lg-4">
    <h3 class="midrow">
      Login to your account
    </h3>
    <p class="text-center"><%= link_to "Login", "/login", class: "btn btn-warning btn-small" %></p>
  </div>

  <div class="col-lg-4">
    <h3 class="midrow">
      View all of our chefs
    </h3>
    <p class="text-center"><%= link_to "View all chefs", chefs_path, class: "btn btn-warning btn-small" %></p>
