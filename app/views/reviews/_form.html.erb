

  <%= form_for @review do |f| %>

    <%= f.label :header %>
    <%= f.text_field :header, id: "header_input" %>

    <%= f.label :body %>
    <%= f.text_area :body, rows: 5 %>

    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.submit(@review.new_record? ? 'Leave Review' : 'Update Review', class: "btn btn-success") %>
	
  <% end %>
